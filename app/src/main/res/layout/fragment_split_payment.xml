<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/laySplitAmountInDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/amount_bg">

            <RelativeLayout
                android:id="@+id/laySplitAmountInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/_8sdp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Payment Amount (Split):"
                    android:textColor="#2F2F2F"
                    android:textSize="36dp" />

                <TextView
                    android:id="@+id/txtAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/_8sdp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="$500.00"
                    android:textColor="#2F2F2F"
                    android:textSize="36dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/includeLayAmountInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/laySplitAmountInfo">

                <include layout="@layout/layout_amount" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/laySplitViewDetails"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_below="@+id/includeLayAmountInfo"
                android:background="@drawable/view_details_bg"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imaArrow1"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:rotation="270"
                    android:src="@drawable/ic_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="View Details"
                    android:textColor="#2F2F2F"
                    android:textSize="24dp" />

                <ImageView
                    android:id="@+id/imaArrow2"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:rotation="270"
                    android:src="@drawable/ic_back" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/laySplitPayOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Card Reader is Ready"
                    android:textColor="@color/colorMainTxt"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_2ssp"
                    android:src="@drawable/ic_success" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:fontFamily="@font/roboto_regular"
                android:text="Please insert card"
                android:textColor="#2F2F2F"
                android:textSize="36dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_2ssp"
                    android:src="@drawable/ic_card" />

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_2ssp"
                    android:src="@drawable/ic_card" />

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_2ssp"
                    android:src="@drawable/ic_card" />

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_2ssp"
                    android:src="@drawable/ic_card" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/laySplitInputCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:background="#A9DCC9">

                <ImageView
                    android:id="@+id/imgPayCard1"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:src="@drawable/ic_payment" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:fontFamily="@font/roboto_medium"
                android:text="Additional Payment Options"
                android:textColor="#7C7C7C"
                android:textSize="@dimen/_10sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/butSplitPay"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg"
                    android:text="Pay Cash"
                    android:textAllCaps="false"
                    android:textColor="#FDFDFD"
                    android:textSize="26dp" />

                <Button
                    android:id="@+id/butSplitChange"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg"
                    android:text="Change Split"
                    android:textAllCaps="false"
                    android:textColor="#FDFDFD"
                    android:textSize="26dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/laySplitPaymentProcessing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2ssp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_5ssp"
                android:src="@drawable/ic_clock" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="Processing..."
                android:textColor="#2F2F2F"
                android:textSize="36dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_2ssp"
                android:layout_marginTop="@dimen/_2ssp"
                android:layout_marginEnd="@dimen/_2ssp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="Keep card inserted and stay on this page until completed."
                android:textColor="#7C7C7C"
                android:textSize="24dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:background="#A9DCC9">

                <ImageView
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_150sdp"
                    android:src="@drawable/ic_payment" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>