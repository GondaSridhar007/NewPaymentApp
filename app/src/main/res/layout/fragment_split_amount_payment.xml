<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/includeLayAmountInfo"
            layout="@layout/layout_amount" />

        <LinearLayout
            android:id="@+id/layViewDetails"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/view_details_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imaArrow1"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:rotation="270"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:fontFamily="@font/roboto_medium"
                android:text="View Details"
                android:textColor="#2F2F2F"
                android:textSize="24dp" />

            <ImageView
                android:id="@+id/imaArrow2"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:rotation="270"
                android:src="@drawable/ic_back" />
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#ECECEC"
            app:cardCornerRadius="@dimen/_4sdp"
            app:cardElevation="@dimen/_4sdp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imCancel"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:src="@drawable/ic_cancel" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_2sdp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Total Amount"
                        android:textColor="#FF2F2F2F"
                        android:textSize="24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_2sdp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="$1,1770.00"
                        android:textColor="#FF2F2F2F"
                        android:textSize="36dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Your Payment"
                        android:textColor="#FF2F2F2F"
                        android:textSize="36dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="$"
                            android:textColor="#FF2F2F2F"
                            android:textSize="36dp" />

                        <EditText
                            android:id="@+id/etTextAmount"
                            android:layout_width="@dimen/_140sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:background="@drawable/edit_bg_amount"
                            android:gravity="right|center"
                            android:hint="000.00"
                            android:inputType="number"
                            android:padding="@dimen/_5sdp"
                            android:textSize="36dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Total Amount"
                        android:textColor="#FF2F2F2F"
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/txtTotalAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_2sdp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="$1,1770.00"
                        android:textColor="#FF2F2F2F"
                        android:textSize="36dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <Button
                            android:id="@+id/butCancel"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_32sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:background="@drawable/ic_button_disconnected"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Cancel"
                            android:textAllCaps="false"
                            android:textColor="#FF414141"
                            android:textSize="26dp"
                            app:elevation="@dimen/_5sdp" />

                        <Button
                            android:id="@+id/butPaySlitPay"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_32sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:background="@drawable/ic_confirm"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Confirm"
                            android:textAllCaps="false"
                            android:textColor="#1C222E"
                            android:textSize="26dp"
                            app:elevation="@dimen/_5sdp" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>